{
	"compilerOptions": {
		"declaration": true,
		"experimentalDecorators": true,
		"module": "umd",
		"moduleResolution": "node",
		"noUnusedLocals": true,
		"outDir": "_build/",
		"removeComments": false,
		"sourceMap": true,
		"strict": true,
		"target": "es5",
		"lib": [
			"dom",
			"es5",
			"es2015.iterable",
			"es2015.promise",
			"es2015.symbol",
			"es2015.symbol.wellknown",
			"scripthost"
		],
		"types": [ "intern" ]
	},
	"include": [
		"./src/**/*.ts",
		"./tests/**/*.ts",
		"node_modules/dojo-typings/dojo/1.11/modules.d.ts",
		"node_modules/dojo-typings/dijit/1.11/modules.d.ts"
	]
}
